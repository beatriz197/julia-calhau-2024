programa 
{ 
	funcao inicio () 
	{
		escreva("1 - pegar os ingredientes e a forma")
    escreva("2 - se o forno estiver ligado passo 4 se não passo 3")
    escreva("3 - pré-aquecer o forno")
    escreva("4 - se a forma estiver untada  passo 6 se não")
    escreva("5 - untar a forma")
    escreva("6 - misturar os ingredientes")
    escreva("7 - colocar ingredientes na forma")
    escreva("8 - colocar a forma no forno")
    escreva("9 - se a massa não grudar paaso 11 se não passo 10")
    escreva("10 - deixar no forno por mais 10 minutos e repetir o passo 9")
    escreva("11 - retirar o bolo do forno")
    escreva("12 - desenformar o bolo")
    
	} 
  
}

