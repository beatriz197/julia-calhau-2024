#include<stdio.h>
int main(){
    int calc;
    int a,b,c;
    for(;;){
    printf(" Digite 1 para Soma: \n Digite 2 para Subtração: \n Digite 3 para Multipicação: \n Digite 4 para Divisão: \n Digite 5 para encerrar o programa \n ");
    scanf("%d", &calc);
    
    if (calc<=4){
    
    switch(calc){
    case 1:
    printf("Digite o 1° Numero: ");
    scanf("%d", &a);
    printf("Digite o 2° Numero: ");
    scanf("%d", &b);
    c = a + b;
    printf("a soma é: %d",c);
    break;
    case 2:
    printf("Digite o 1° Numero: ");
    scanf("%d", &a);
    printf("Digite o 2° Numero: ");
    scanf("%d", &b);
    c = a - b;
    printf("A Subtração é: %d",c);
    break;
    case 3:
    printf("Digite o 1° Numero: ");
    scanf("%d", &a);
    printf("Digite o 2° Numero: ");
    scanf("%d", &b);
    c = a * b;
    printf("A Multipicação é: %d",c);
    break;
    case 4:
    printf("Digite o 1° Numero: ");
    scanf("%d", &a);
    printf("Digite o 2° Numero: ");
    scanf("%d", &b);
    c = a / b;
    printf("A Divisão é: %d",c);
    break;
    
    }
    }else{
        printf("Programa encerrado");
        break;
        
    }
}
   return 0;
}
